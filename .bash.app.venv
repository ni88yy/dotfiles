function pve_inner {
python3 - <<END
import os
import re
from pathlib import Path
path_base = 'dev'
venv_base = 'dev/venvs'
venv_path = re.sub(path_base, venv_base, os.getcwd())
venv_dir = Path(venv_path)
if not venv_dir.is_dir():
    print(f'$1 -m venv {venv_path}')
else:
    script = venv_path + '/bin/activate'
    print(f'source {script}')
END
}

function pve {
  # Call it
  ARG1=${1:-python3}
  $(pve_inner $ARG1)
  $(pve_inner)
}
