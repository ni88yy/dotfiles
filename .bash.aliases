alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ll='ls -lhFG'
alias chrome="open -a 'Google Chrome'"
alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"

function cd() {
    new_directory="$*";
    if [ $# -eq 0 ]; then 
        new_directory=${HOME};
    fi;
    builtin cd "${new_directory}" && ll
}

